<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/splash_screen_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <ImageView
            android:id="@+id/splash_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wc_splashscreen"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:contentDescription="@string/splash_screen_desc"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facebook_button"
            android:layout_marginLeft="39dp"
            android:background="@android:color/transparent"
            android:layout_above="@+id/dial_button" android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/dial_button"
            android:layout_toEndOf="@+id/facebook_button"
            android:layout_marginBottom="38dp" android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/facebook_button" android:layout_alignStart="@+id/facebook_button"
            android:layout_marginLeft="26dp" android:width="260dp"
            />


</RelativeLayout>